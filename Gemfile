source 'https://rubygems.org'

gem 'rails'
gem 'pg'
gem 'haml'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'foundation-icons-sass-rails'
  gem 'zurb-foundation'
end

group :development, :test do
  gem 'pry-rails'
  gem 'pry-debugger'
  gem 'pry-stack_explorer'

  gem 'quiet_assets'
  gem 'binding_of_caller'
  gem 'meta_request'

  gem 'annotate'

  gem 'rspec-rails'
  gem 'faker'
  gem 'factory_girl_rails'

  gem 'capybara'
  gem 'launchy'
  gem 'database_cleaner'
  gem 'guard-rspec'
  gem 'rb-fsevent'
end

group :development do
  gem 'better_errors'
end